<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfb5b5"
    tools:context=".Login">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_logon_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_logo_login"
            android:src="@drawable/logo_login"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            app:layout_constraintTop_toTopOf="@+id/constraint_login" />

        <TextView
            android:id="@+id/tv_name_congty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công Ty TNHH Quyết Cường"
            android:textColor="#212020"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            app:layout_constraintTop_toBottomOf="@id/img_logon_login" />

        <TextView
            android:id="@+id/tv_name_activity_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Đăng ký"
            android:textColor="#3941dc"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_congty" />

        <EditText
            android:id="@+id/name_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_edittext_register"
            android:hint="   tên nhân viên..."
            android:textColorHint="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_activity_register" />

        <EditText
            android:id="@+id/address_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_edittext_register"
            android:hint="   địa chỉ.."
            android:textColorHint="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_register" />

        <EditText
            android:id="@+id/phonenumber_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColorHint="#000000"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_edittext_register"
            android:hint="   số điện thoại.."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_register"

            />

        <EditText
            android:id="@+id/email_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_edittext_register"
            android:hint="   email.."
            android:textColorHint="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phonenumber_register"
            app:layout_constraintRight_toRightOf="parent"
            />

        <EditText
            android:background="@drawable/backgroud_edittext_register"
            android:id="@+id/chucvu_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColorHint="#000000"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:hint="   chức vụ.."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_register" />
        <CheckBox
            android:id="@+id/checkbox_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/chucvu_register"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/tv_agree_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree with company's rules"
            android:textSize="16sp"
            android:textColor="#3941dc"
            app:layout_constraintTop_toBottomOf="@+id/chucvu_register"
            app:layout_constraintLeft_toRightOf="@id/checkbox_register"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backdround_button_register"
            app:layout_constraintTop_toBottomOf="@+id/tv_agree_rules"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Đăng ký"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#ffffff"/>




    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>